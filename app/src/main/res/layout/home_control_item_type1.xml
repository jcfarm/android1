<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/home_control1_img"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:src="@drawable/jkx"/>
            <TextView
                style="@style/wordType16sp"
                android:id="@+id/home_control1_content"
                android:padding="20sp"
                android:gravity="left"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电磁阀"/>
            <Switch
                style="@style/wordType12sp"
                android:textOff="关闭"
                android:textOn="开启"
                android:id="@+id/home_control1_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_pull_down"/>

        </LinearLayout>




</RelativeLayout>